#include <bits/stdc++.h>

int main()
{
	std::ios::sync_with_stdio(0);
	std::cin.tie(0);
	
	std::string str;
	std::cin >> str;

	int result = 0;
	for (int i = 0; i < str.size(); ++i)
	{
		if (str[i] == 'a' || str[i] == 'e' || str[i] == 'i' ||
			str[i] == 'o' || str[i] == 'u')
			result++;
	}
	std::cout << result;
	return 0;
}
